{
  "name": "pantheon-systems/example-drops-7-composer",
  "description": "Install drops-7 with Composer on Pantheon.",
  "type": "project",
  "license": "MIT",
  "repositories": {
    "drupal": {
      "type": "composer",
      "url":  "https://packages.drupal.org/7"
    }
  },
  "require": {
    "php": ">=5.2.5",
    "ext-gd": "*",
    "ext-xml": "*",
    "ext-json": "*",
    "ext-openssl": "*",
    "ext-curl": "*",
    "ext-pdo": "*",
    "ext-pdo_mysql": "*",
    "composer/installers": "^1.0",
    "drush-ops/behat-drush-endpoint": "^1",
    "rvtraveller/qs-composer-installer": "^1.1",
    "cweagans/composer-patches": "^1.0",
    "drupal-composer/preserve-paths": "0.1.*",
    "drupal/composer_autoloader": "1.*",

    "pantheon-systems/drops-7-composer": "^7",

    "drush/drush": "^8"
  },
  "require-dev": {
    "behat/behat": "3.*",
    "behat/mink": "^1.7",
    "behat/mink-extension": "^2.2",
    "behat/mink-goutte-driver": "^1.2",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.5.0",
    "drupal/coder": "^8.3",
    "drupal/drupal-extension": "^3.1",
    "jcalderonzumba/gastonjs": "^1.0.2",
    "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
    "mikey179/vfsstream": "^1.2",
    "pantheon-systems/quicksilver-pushback": "~1",
    "phpunit/phpunit": "^4.8",
    "squizlabs/php_codesniffer": "^3.4",
    "symfony/css-selector": "^2.8"
  },
  "conflict": {
    "drupal/core": "8.*"
  },
  "minimum-stability": "alpha",
  "prefer-stable": true,
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ]
  },
  "scripts": {
    "build-assets": [
        "@prepare-for-pantheon",
        "composer install --optimize-autoloader --no-dev"
    ],
    "lint": "find web/sites/all/modules/custom web/sites/all/themes/custom -name '*.php' -exec php -l {} \\;",
    "code-sniff": [
      "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/sites/all/modules/custom",
      "./vendor/bin/phpcs --standard=Drupal --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/sites/all/themes/custom",
      "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/sites/all/modules/custom",
      "./vendor/bin/phpcs --standard=DrupalPractice --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md --ignore=node_modules,bower_components,vendor ./web/sites/all/themes/custom"
    ],
    "unit-test": "echo 'No unit test step defined.'",
    "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon"
  },
  "config": {
    "vendor-dir": "vendor",
    "optimize-autoloader": true,
    "sort-packages": true,
    "platform": {
      "php": "5.6.3"
    }
  },
  "extra": {
    "installer-paths": {
      "web/": ["type:drupal-core"],
      "web/sites/all/modules/contrib/{$name}/": ["type:drupal-module"],
      "web/sites/all/themes/contrib/{$name}/": ["type:drupal-theme"],
      "web/sites/all/libraries/{$name}/": ["type:drupal-library"],
      "web/sites/all/drush/{$name}/": ["type:drupal-drush"],
      "web/profiles/{$name}/": ["type:drupal-profile"]
    },
    "preserve-paths": [
      "web/sites/all/drush",
      "web/sites/all/libraries",
      "web/sites/all/modules/contrib",
      "web/sites/all/modules/custom",
      "web/sites/all/modules/features",
      "web/sites/all/themes/contrib",
      "web/sites/all/themes/custom",
      "web/sites/all/translations",
      "web/sites/default"
    ],
    "build-env": {
      "install-cms": [
        "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes"
      ]
    }
  }
}
